<Window x:Class="Учет_СИЗ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учет_СИЗ"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" MinWidth="500" MinHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BtnAddPerson" Content="Добавить" Margin="5" MaxHeight="30" MinHeight="30" Height="30" Click="BtnAddPerson_Click">

            </Button>

            <Button x:Name="BtnUpdate" Content="Обновить" Margin="5" MaxHeight="30" MinHeight="30" Height="30" Click="BtnUpdate_Click">

            </Button>
        </StackPanel>

        <Grid Grid.Row="2" ScrollViewer.CanContentScroll="True">
            <ScrollViewer>
                <StackPanel x:Name="StackPanel_Persona" ScrollViewer.CanContentScroll="True" CanVerticallyScroll="True" CanHorizontallyScroll="True"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
