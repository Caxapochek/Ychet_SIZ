<Window x:Class="Учет_СИЗ.PersonalCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Учет_СИЗ"
        mc:Ignorable="d"
        Title="Personal Card" Height="600" Width="600" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Label" x:Key="Style_Label1">
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox" x:Key="Style_TextBox1">
            <Setter Property="Height" Value="21"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="150*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Номер карточки" Style="{StaticResource Style_Label1}" />
                <Label Content="Фамилия: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Имя: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Отчество: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Должность: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Руководитель: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Объект: " Style="{StaticResource Style_Label1}"/>
                <Label  Content="Адресс объекта: " Style="{StaticResource Style_Label1}"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox x:Name="PersonalNumber" Style="{StaticResource Style_TextBox1}" Margin="2,5,2,2"/>
                <TextBox x:Name="SecondName" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="FirstName" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="MiddleName" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="Position" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="FIOChef" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="Facility" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="FacilityAdress" Style="{StaticResource Style_TextBox1}"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Label Content="Возраст: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Пол: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Рост: " Style="{StaticResource Style_Label1}"/>
                <Label Content="Размер одежды: " Style="{StaticResource Style_Label1}"/>

            </StackPanel>
            <StackPanel Grid.Column="3">
                <TextBox x:Name="Age" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="Gender" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="Height" Style="{StaticResource Style_TextBox1}"/>
                <TextBox x:Name="ClothingSize" Style="{StaticResource Style_TextBox1}"/>
            </StackPanel>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="StackPanelInventory" Background="#FFF3F3F3">
                <TextBlock Text="что-то 1"/>
                <TextBlock Text="что-то 2"/>
                <TextBlock Text="что-то 3"/>
                <TextBlock Text="что-то 4"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSavePerson" 
                    Content="Сохранить" 
                    Width="100"
                    Click="BtnSavePerson_Click" 
                    Margin="10"/>
            <Button x:Name="BtnDeletePerson" 
                    Content="Удалить" 
                    Width="100"
                    Click="BtnDeletePerson_Click" 
                    Margin="10" 
                    Background="#FFFF4343"/>
        </StackPanel>

    </Grid>
</Window>